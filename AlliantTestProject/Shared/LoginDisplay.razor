<AuthorizeView>
    <Authorized>
        @* <a class="btn btn-outline-warning" href="Identity/Account/Manage">Hello, @context.User.Identity?.Name!</a> *@
        <a class="btn btn-outline-warning btn-sm mr-2" href="Identity/Account/Manage">My Account</a>
        <form style="margin-left: 1rem" method="post" action="Identity/Account/LogOut">
            <button type="submit" class="btn btn-outline-warning btn-sm ml-2">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-outline-warning btn-sm" href="Identity/Account/Register">Register</a>
        <a class="btn btn-outline-warning btn-sm" href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
